@{
    ViewBag.Title = "Validate";
}

<h2>Validate</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>YubiKey</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("otp", "Yubikey OTP", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">     
                @Html.TextBox("otp", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
    </div>
}

